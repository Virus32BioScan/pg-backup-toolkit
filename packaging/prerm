#!/bin/sh
set -e
if [ "$1" = "remove" ] || [ "$1" = "deconfigure" ]; then
  if command -v systemctl >/dev/null 2>&1; then
    systemctl disable --now pg-backup@nightly.timer 2>/dev/null || true
    systemctl disable --now pg-backup@hourly.timer 2>/dev/null || true
    systemctl disable --now pg-backup@weekend.timer 2>/dev/null || true
  fi
fi
exit 0
